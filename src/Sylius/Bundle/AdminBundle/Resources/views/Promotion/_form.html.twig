{{ form_errors(form) }}
<div class="ui segment">
    <h4 class="ui dividing header">{{ 'sylius.ui.promotion_information'|trans }}</h4>
    <div class="two fields">
        {{ form_row(form.code) }}
        {{ form_row(form.name) }}
    </div>
    <div class="two field">
        <div class="column">
            {{ form_row(form.usageLimit) }}
            {{ form_row(form.exclusive) }}
            {{ form_row(form.couponBased) }}
        </div>
        <div class="column">
            {{ form_label(form.channels) }}
            {% for channels in form.channels %}
                <p></p>
                {{ form_row(channels) }}
            {% endfor %}
        </div>
    </div>
    <div class="two fields">
        {{ form_row(form.startsAt) }}
        {{ form_row(form.endsAt) }}
    </div>
</div>
<div class="ui segment">
    <h4 class="ui dividing header">{{ 'sylius.ui.promotion_configuration'|trans }}</h4>

    <div class="ui two column stackable grid">
        <div class="column">
            {{ form_row(form.rules) }}
        </div>
        <div class="column" id="actions">
            {{ form_row(form.actions) }}
        </div>
    </div>
</div>

