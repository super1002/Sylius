<div class="ui labeled icon top right floating dropdown button primary link">
    <i class="plus icon"></i>
    <span class="text">{{ 'sylius.ui.create'|trans }}</span>
    <div class="menu">
        <div class="header">
            <i class="world icon"></i>
            {{ 'sylius.ui.type'|trans }}
        </div>
        <div class="divider"></div>
        {% set createRouteName = grid.requestConfiguration.getRouteName('create') %}
        <a class="item" href="{{ path(createRouteName, { 'type': 'text' }) }}">Text</a>
        <a class="item" href="{{ path(createRouteName, { 'type': 'textarea' }) }}">Textarea</a>
        <a class="item" href="{{ path(createRouteName, { 'type': 'checkbox' }) }}">Checkbox</a>
        <a class="item" href="{{ path(createRouteName, { 'type': 'integer' }) }}">Integer</a>
        <a class="item" href="{{ path(createRouteName, { 'type': 'percent' }) }}">Percent</a>
    </div>
</div>
