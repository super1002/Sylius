<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Sylius\Bundle\ApiBundle\Command\Checkout\AddressOrder">
        <property name="billingAddress">
            <constraint name="NotNull">
                <option name="message">sylius.address.not_null</option>
                <option name="groups">
                    <value>sylius</value>
                </option>
            </constraint>
            <constraint name="Sylius\Bundle\ApiBundle\Validator\Constraints\AddressingNotEmpty">
                <option name="message">sylius.address.first_name.not_blank</option>
                <option name="groups">
                    <value>sylius</value>
                </option>
            </constraint>
        </property>
        <property name="shippingAddress">
            <constraint name="Sylius\Bundle\ApiBundle\Validator\Constraints\AddressingNotEmpty">
                <option name="message">sylius.address.first_name.not_blank</option>
                <option name="groups">
                    <value>sylius</value>
                </option>
            </constraint>
        </property>
    </class>
</constraint-mapping>
