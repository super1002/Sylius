<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="sylius.promotion.eligibility_checker.promotion_coupon_duration"
                 class="Sylius\Component\Promotion\Checker\Eligibility\PromotionCouponDurationEligibilityChecker"
                 public="false" />

        <service id="sylius.promotion.eligibility_checker.promotion_coupon_usage_limit"
                 class="Sylius\Component\Promotion\Checker\Eligibility\PromotionCouponUsageLimitEligibilityChecker"
                 public="false" />

        <service id="sylius.promotion_coupon_eligibility_checker"
                 class="Sylius\Component\Promotion\Checker\Eligibility\CompositePromotionCouponEligibilityChecker">
            <argument type="collection">
                <argument type="service" id="sylius.promotion.eligibility_checker.promotion_coupon_duration" />
                <argument type="service" id="sylius.promotion.eligibility_checker.promotion_coupon_usage_limit" />
            </argument>
        </service>

        <service id="sylius.promotion.eligibility_checker.promotion_duration"
                 class="Sylius\Component\Promotion\Checker\Eligibility\PromotionDurationEligibilityChecker"
                 public="false" />

        <service id="sylius.promotion.eligibility_checker.promotion_usage_limit"
                 class="Sylius\Component\Promotion\Checker\Eligibility\PromotionUsageLimitEligibilityChecker"
                 public="false" />

        <service id="sylius.promotion.eligibility_checker.promotion_subject_coupon"
                 class="Sylius\Component\Promotion\Checker\Eligibility\PromotionSubjectCouponEligibilityChecker"
                 public="false">
            <argument type="service" id="sylius.promotion_coupon_eligibility_checker" />
        </service>

        <service id="sylius.promotion.eligibility_checker.promotion_rules"
                 class="Sylius\Component\Promotion\Checker\Eligibility\PromotionRulesEligibilityChecker"
                 public="false">
            <argument type="service" id="sylius.registry.promotion_rule_checker" />
        </service>

        <service id="sylius.promotion_eligibility_checker"
                 class="Sylius\Component\Promotion\Checker\Eligibility\CompositePromotionEligibilityChecker">
            <argument type="collection">
                <argument type="service" id="sylius.promotion.eligibility_checker.promotion_duration" />
                <argument type="service" id="sylius.promotion.eligibility_checker.promotion_usage_limit" />
                <argument type="service" id="sylius.promotion.eligibility_checker.promotion_subject_coupon" />
                <argument type="service" id="sylius.promotion.eligibility_checker.promotion_rules" />
            </argument>
        </service>
    </services>
</container>
