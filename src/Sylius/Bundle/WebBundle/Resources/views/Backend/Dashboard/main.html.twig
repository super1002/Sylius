{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% from 'SyliusWebBundle:Backend/Order:macros.html.twig' import list as listOrders %}
{% from 'SyliusWebBundle:Backend/User:macros.html.twig' import list as listUsers %}


{% block javascripts %}
{{ parent() }}
{% javascripts output='assets/compiled/chart.js'
    'https://raw.github.com/nnnick/Chart.js/master/Chart.min.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    <script type="text/javascript">
        $(document).ready(function() {
            {% for id, chart in charts %}
                new Chart($('#{{ id }}').get(0).getContext('2d')).{{ chart.type }}({{ chart.data|json_encode()|raw }});
            {% endfor %}
        });
    </script>
{% endjavascripts %}
{% endblock %}

{% block content %}
<div class="page-header">
    <h1>{{ 'sylius.backend.dashboard.header'|trans }}<small> {{ 'sylius.backend.dashboard.subheader'|trans }}</small></h1>
</div>

<div class="alert alert-info">
    <button type="button" class="close" aria-hidden="true">&times;</button>
    <h4 class="alert-heading">{{ 'sylius.backend.alert.info'|trans }}</h4>
    There are no new notifications.
</div>

<table class="table">
    <thead>
        <tr>
            <th>{{ 'sylius.backend.dashboard.revenue'|trans }}</th>
            <th>{{ 'sylius.backend.dashboard.orders'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ revenue|sylius_money }}</td>
            <td>{{ ordersCount }}</td>
        </tr>
    </tbody>
</table>

<div class="row" class="visible-md">
    {% for id, chart in charts %}
        <div class="col-md-6">
            <h3><i class="{{ loop.first ? 'icon-dollar' : 'icon-shopping-cart' }}"></i> {{ chart.label|trans }}</h3>
            <canvas id="{{ id }}" width="700" height="400"></canvas>
        </div>
    {% endfor %}
</div>

<h3><a href="{{ path('sylius_backend_order_index') }}"><i class="icon-shopping-cart"></i> {{ 'sylius.order.recent_header'|trans }}</a></h3>
{{ listOrders(orders)  }}

<h3><a href="{{ path('sylius_backend_user_index') }}"><i class="icon-user"></i> {{ 'sylius.user.recent_header'|trans }}</a></h3>
{{ listUsers(users)  }}

{% endblock %}
