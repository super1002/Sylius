{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% from 'SyliusWebBundle:Backend/Zone:macros.html.twig' import list %}
{% from 'SyliusAddressingBundle:Zone:buttons.html.twig' import updateRoute %}

{% block topbar %}
<ol class="breadcrumb">
    <li>{{ 'sylius.breadcrumb.configuration'|trans }}</li>
    <li>{{ 'sylius.breadcrumb.zone.index'|trans }}</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <div class="actions-menu">
        {{ form_widget(form.type) }}
        {{ updateRoute("this.href='type_'+document.getElementById('form_type').value+'/new'", 'sylius.zone.create') }}
        {{ buttons.manage(path('sylius_backend_country_index'), 'sylius.country.manage'|trans) }}
    </div>
    <h1><i class="glyphicon glyphicon-globe"></i> {{ 'sylius.zone.index_header'|trans|raw }}</h1>
</div>

{{ pagination(zones) }}
{{ list(zones) }}
{{ pagination(zones) }}

{% endblock %}
