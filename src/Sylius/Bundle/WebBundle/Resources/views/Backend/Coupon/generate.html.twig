{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block content %}
<div class="page-header">
    <h1><i class="icon-random"></i> {{ 'sylius.promotion_coupon.generate_header'|trans|raw }}</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('sylius_backend_promotion_coupon_generate', {'promotionId': promotion.id}) }}" method="post" class="form-horizontal" novalidate>
    {% include 'SyliusWebBundle:Backend/Coupon:_generateForm.html.twig' %}
    <div class="form-actions">
        <button type="submit" class="btn btn-primary btn-lg"><i class="icon-random"></i> {{ 'sylius.generate'|trans }}</button>
        <a href="{{ app.request.headers.get('referer') }}" class="btn btn-lg"><i class="icon-remove"></i> {{ 'sylius.cancel'|trans }}</a>
    </div>
</form>
{% endblock %}
