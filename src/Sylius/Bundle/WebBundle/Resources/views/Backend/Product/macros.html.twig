{% macro list(products) %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% if products|length > 0 %}
<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th class="id">{{ sylius_resource_sort('id', '#id') }}</th>
            <th class="info">{{ sylius_resource_sort('name', 'sylius.product.name'|trans) }}</th>
            <th class="stock">{{ 'sylius.product.stock'|trans }}</th>
            <th class="retail-price">{{ 'sylius.product.price'|trans }}</th>
            <th class="updated-at">{{ sylius_resource_sort('updatedAt', 'sylius.product.updatedAt'|trans) }}</th>
            <th class="actions"></th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr id="{{ product.id }}">
            <td class="center-text"><input type="checkbox" value="{{ product.id }}" /></td>
            <td class="id">
                {{ product.id }}
            </td>
            <td class="info">
                <div class="media">
                    <a href="{{ path('sylius_backend_product_show', {'id': product.id}) }}" class="pull-left">
                        <img src="{{ product.image ? product.image.path|imagine_filter('sylius_90x60') : 'http://placehold.it/50x40' }}" alt="" class="imgmedia-object" />
                    </a>
                    <div class="media-body">
                        <h5 class="media-heading">
                            <a href="{{ path('sylius_backend_product_show', {'id': product.id}) }}">{{ product.name }}</a>
                            {% if not product.isAvailable %}<span class="label label-default">Not Available</span>{% endif %}
                        </h5>
                        <div class="media-body">
                            <ul class="list-unstyled">
                                {% if product.sku %}
                                    <li><strong>{{ 'sylius.product.sku'|trans }}: </strong> <code class="sku">{{ product.sku }}</code></li>
                                {% endif %}

                                {% if product.options|length > 0 %}
                                    {% for option in product.options %}
                                        <li><strong>{{ option.name }}</strong>: {{ option.values|join(', ') }}</li>
                                    {% endfor %}
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            </td>
            {% if product.masterVariant.onHand > 0 and product.masterVariant.isAvailable %}
                <td class="stock in-stock">
                    {{ product.masterVariant.onHand }} on Hand
                </td>
            {% else %}
                <td class="stock out-of-stock text-muted">
                    Out of Stock
                </td>
            {% endif %}


            {# Retail Price #}
            {% if not product.hasOptions %}
                <td class="retail-price">
                    {{ product.masterVariant.price|sylius_price }}
                </td>
            {% else %}
                <td class="retail-price text-muted">
                    N/A
                </td>
            {% endif %}

            <td class="updated-at">
                {{ product.updatedAt|date('M d') }}
            </td>
            <td class="actions text-right">
                {{ buttons.edit(path('sylius_backend_product_update', {'id': product.id})) }}
                {{ buttons.delete(path('sylius_backend_product_delete', {'id': product.id})) }}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('sylius.product.no_results'|trans) }}
{% endif %}

{% endmacro %}
