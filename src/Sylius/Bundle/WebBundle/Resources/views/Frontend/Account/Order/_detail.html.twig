<div class="row-fluid well">
    <div class="span6">
        <strong>{{ 'sylius.account.order.created_at'|trans }} {{ order.createdAt|date() }}</strong><br>
        {{ 'sylius.account.order.shipment_mode'|trans }} <strong>TODO</strong><br>
        {{ 'sylius.account.order.payment_mode'|trans }} <strong>TODO</strong><br>
    </div>
    <div class="span6">
        <br>
        {{ 'sylius.account.order.number'|trans }} <strong>{{ order.number }}</strong><br>
        {{ 'sylius.account.order.status'|trans }} <strong>TODO</strong><br>
        {{ 'sylius.account.order.tracking_number'|trans }} <strong>TODO</strong><br>
    </div>
</div>

<div class="row-fluid">
    <table id="items" class="table">
        <thead>
        <tr>
            <th colspan="3">{{ 'sylius.account.order.item.name'|trans }}</th>
            <th>{{ 'sylius.account.order.item.unit_price'|trans }}</th>
            <th>{{ 'sylius.account.order.item.total'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for item in order.items %}
            {% set variant = item.sellable %}
            {% set product = variant.product %}
            <tr>
                <td>
                    {% if product.images|length > 0 %}
                        <div data-toggle="modal-gallery" data-target="#modal-gallery">
                            {% for image in product.images %}
                                <a href="{{ image.path|imagine_filter('sylius_gallery') }}" data-gallery="gallery" title="{{ product.name }}">
                                    <img class="img-polaroid" src="{{ image.path|imagine_filter('sylius_90x60') }}" alt="{{ product.name }}" />
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </td>
                <td>{{ item.quantity }}</td>
                <td>{{ variant.sellableName }}</td>
                <td>{{ item.unitPrice|sylius_money }}</td>
                <td>{{ item.total|sylius_money }}</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3"></td>
            <th><strong>{{ 'sylius.order.tax_total'|trans }}</strong></th>
            <th>{{ order.taxTotal|sylius_money }}</th>
        </tr>
        <tr>
            <td colspan="3"></td>
            <th><strong>{{ 'sylius.order.shipping_total'|trans }}</strong></th>
            <th>{{ order.shippingTotal|sylius_money }}</th>
        </tr>
        <tr>
            <td colspan="3"></td>
            <th><strong>{{ 'sylius.order.promotion_total'|trans }}</strong></th>
            <th>{{ order.promotionTotal|sylius_money }}</th>
        </tr>
        <tr>
            <td colspan="3"></td>
            <th>{{ 'sylius.account.order.total'|trans }}</th>
            <th>{{ order.total|sylius_money }}</th>
        </tr>
        </tfoot>
    </table>
</div>