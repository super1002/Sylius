{% import 'SyliusWebBundle:Frontend/Macros:buttons.html.twig' as buttons %}
{% extends 'SyliusWebBundle:Frontend/Account:layout.html.twig' %}

{% block content %}
    <h4>{{ 'sylius.account.order.list'|trans }}</h4>

    <div class="row-fluid">
        <table id="orders" class="table">
            <thead>
                <tr>
                    <td>{{ 'sylius.account.order.created_at'|trans }}</td>
                    <td>{{ 'sylius.account.order.number'|trans }}</td>
                    <td>{{ 'sylius.account.order.total'|trans }}</td>
                    <td>{{ 'sylius.account.order.status'|trans }}</td>
                    <td>{{ 'sylius.account.order.invoice'|trans }}</td>
                    <td>&nbsp;</td>
                </tr>
            </thead>
            <tbody>
                {% for order in orders %}
                    <tr id="order-{{ order.number }}">
                        <td>{{ order.createdAt|date }}</td>
                        <td>{{ order.number }}</td>
                        <td>{{ order.total|sylius_money }}</td>
                        <td>TODO</td>
                        <td>
                            <a href="{{ path('sylius_account_order_invoice', {'number': order.number}) }}">
                                <i class="icon-file"></i>
                            </a>
                        </td>
                        <td>
                            {{ buttons.show(path('sylius_account_order_show', {'number': order.number}), '', 'order-' ~ order.number ~ '-details') }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}