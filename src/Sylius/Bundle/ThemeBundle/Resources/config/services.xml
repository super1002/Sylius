<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.theme.model.class">Sylius\Bundle\ThemeBundle\Model\Theme</parameter>
        <parameter key="sylius.theme.context.class">Sylius\Bundle\ThemeBundle\Context\ThemeContext</parameter>
        <parameter key="sylius.theme.locator.class">Sylius\Bundle\ThemeBundle\Locator\RecursiveFileLocator</parameter>
        <parameter key="sylius.theme.loader.class">Sylius\Bundle\ThemeBundle\Loader\JsonThemeLoader</parameter>
        <parameter key="sylius.theme.factory.class">Sylius\Bundle\ThemeBundle\Factory\ThemeFactory</parameter>
        <parameter key="sylius.theme.repository.class">Sylius\Bundle\ThemeBundle\Repository\ThemeRepository</parameter>
        <parameter key="sylius.theme.data_collector.class">Sylius\Bundle\ThemeBundle\Collector\ThemeDataCollector</parameter>
        <parameter key="sylius.theme.hierarchy_provider.class">Sylius\Bundle\ThemeBundle\HierarchyProvider\ThemeHierarchyProvider</parameter>
        <parameter key="sylius.theme.filesystem.class">Sylius\Bundle\ThemeBundle\Filesystem\Filesystem</parameter>
        <parameter key="sylius.theme.finder_factory.class">Sylius\Bundle\ThemeBundle\Factory\FinderFactory</parameter>

        <parameter key="sylius.theme.locator.resource.class">Sylius\Bundle\ThemeBundle\Locator\ResourceLocator</parameter>
        <parameter key="sylius.theme.locator.application_resource.class">Sylius\Bundle\ThemeBundle\Locator\ApplicationResourceLocator</parameter>
        <parameter key="sylius.theme.locator.bundle_resource.class">Sylius\Bundle\ThemeBundle\Locator\BundleResourceLocator</parameter>

        <parameter key="sylius.theme.asset.assets_installer.class">Sylius\Bundle\ThemeBundle\Asset\Installer\OutputAwareAssetsInstaller</parameter>
        <parameter key="sylius.theme.asset.path_resolver.class">Sylius\Bundle\ThemeBundle\Asset\PathResolver</parameter>

        <parameter key="sylius.theme.translation.translator.class">Sylius\Bundle\ThemeBundle\Translation\Translator</parameter>
        <parameter key="sylius.theme.translation.files_finder.class">Sylius\Bundle\ThemeBundle\Translation\Finder\TranslationFilesFinder</parameter>

        <parameter key="sylius.theme.templating.locator.class">Sylius\Bundle\ThemeBundle\Templating\Locator\TemplateLocator</parameter>
        <parameter key="sylius.theme.templating.locator.cached.class">Sylius\Bundle\ThemeBundle\Templating\Locator\CachedTemplateLocator</parameter>
        <parameter key="sylius.theme.templating.file_locator.class">Sylius\Bundle\ThemeBundle\Templating\Locator\TemplateFileLocator</parameter>

        <parameter key="sylius.theme.templating.cache.clearer.class">Sylius\Bundle\ThemeBundle\Templating\Cache\Clearer\TemplatePathsCacheClearer</parameter>
        <parameter key="sylius.theme.templating.cache.warmer.class">Sylius\Bundle\ThemeBundle\Templating\Cache\Warmer\TemplatePathsCacheWarmer</parameter>

        <!-- Overrided services -->
        <parameter key="sylius.assets.path_package.class">Sylius\Bundle\ThemeBundle\Asset\Package\PathPackage</parameter>
    </parameters>

    <services>
        <service id="sylius.theme.context" class="%sylius.theme.context.class%">
            <argument type="service" id="sylius.theme.hierarchy_provider" />
        </service>

        <service id="sylius.theme.locator" class="%sylius.theme.locator.class%">
            <argument type="service" id="filesystem" />
            <argument type="collection">
                <argument>%kernel.root_dir%</argument>
                <!--<argument>%kernel.root_dir%/../src</argument>-->
                <!--<argument>%kernel.root_dir%/../vendor</argument>-->
            </argument>
        </service>

        <service id="sylius.theme.loader" class="%sylius.theme.loader.class%">
            <argument type="service" id="sylius.theme.filesystem" />
            <argument type="service" id="sylius.theme.factory" />
        </service>

        <service id="sylius.theme.factory" class="%sylius.theme.factory.class%">
            <argument>%sylius.theme.model.class%</argument>
            <argument type="service" id="property_accessor" />
        </service>

        <service id="sylius.theme.repository" class="%sylius.theme.repository.class%" />

        <service id="sylius.theme.data_collector" class="%sylius.theme.data_collector.class%" public="false">
            <argument type="service" id="sylius.theme.repository" />
            <argument type="service" id="sylius.theme.context" />
            <tag name="data_collector" template="SyliusThemeBundle:Profiler:theme" id="sylius_theme" />
        </service>

        <service id="sylius.theme.hierarchy_provider" class="%sylius.theme.hierarchy_provider.class%">
            <argument type="service" id="sylius.theme.repository" />
        </service>

        <service id="sylius.theme.filesystem" class="%sylius.theme.filesystem.class%" />

        <service id="sylius.theme.finder_factory" class="%sylius.theme.finder_factory.class%" />

        <service id="sylius.theme.asset.assets_installer" class="%sylius.theme.asset.assets_installer.class%">
            <argument type="service" id="filesystem" />
            <argument type="service" id="kernel" />
            <argument type="service" id="sylius.theme.repository" />
            <argument type="service" id="sylius.theme.hierarchy_provider" />
            <argument type="service" id="sylius.theme.asset.path_resolver" />
        </service>

        <service id="sylius.theme.asset.path_resolver" class="%sylius.theme.asset.path_resolver.class%" public="false" />

        <service id="sylius.theme.locator.resource" class="%sylius.theme.locator.resource.class%" public="false">
            <argument type="service" id="sylius.theme.locator.application_resource" />
            <argument type="service" id="sylius.theme.locator.bundle_resource" />
        </service>

        <service id="sylius.theme.locator.application_resource" class="%sylius.theme.locator.application_resource.class%">
            <argument type="service" id="filesystem" />
        </service>

        <service id="sylius.theme.locator.bundle_resource" class="%sylius.theme.locator.bundle_resource.class%">
            <argument type="service" id="filesystem" />
            <argument type="service" id="kernel" />
        </service>

        <service id="sylius.theme.translation.translator" class="%sylius.theme.translation.translator.class%" decorates="translator">
            <argument type="service" id="sylius.theme.translation.translator.inner" />
            <argument type="service" id="sylius.theme.context" />
        </service>

        <service id="sylius.theme.translation.files_finder" class="%sylius.theme.translation.files_finder.class%" public="false">
            <argument type="service" id="sylius.theme.finder_factory" />
        </service>

        <service id="sylius.theme.templating.cache" class="Doctrine\Common\Cache\ArrayCache" />

        <service id="sylius.theme.templating.locator" class="%sylius.theme.templating.locator.class%" public="false">
            <argument type="service" id="sylius.theme.locator.resource" />
        </service>

        <service id="sylius.theme.templating.locator.cached" class="%sylius.theme.templating.locator.cached.class%" decorates="sylius.theme.templating.locator" public="false">
            <argument type="service" id="sylius.theme.templating.locator.cached.inner" />
            <argument type="service" id="sylius.theme.templating.cache" />
        </service>

        <service id="sylius.theme.templating.file_locator" class="%sylius.theme.templating.file_locator.class%" decorates="templating.locator" public="false">
            <argument type="service" id="sylius.theme.templating.file_locator.inner" />
            <argument type="service" id="sylius.theme.context" />
            <argument type="service" id="sylius.theme.templating.locator" />
            <argument>%kernel.cache_dir%</argument>
        </service>

        <service id="sylius.theme.templating.cache.clearer" class="%sylius.theme.templating.cache.clearer.class%" public="false">
            <argument type="service" id="sylius.theme.templating.cache" />
            <tag name="kernel.cache_clearer" priority="20" />
        </service>
        
        <service id="sylius.theme.templating.cache.warmer" class="%sylius.theme.templating.cache.warmer.class%" public="false">
            <argument type="service" id="templating.finder" />
            <argument type="service" id="sylius.theme.templating.locator" />
            <argument type="service" id="sylius.theme.repository" />
            <argument type="service" id="sylius.theme.templating.cache" />
            <tag name="kernel.cache_warmer" priority="20" />
        </service>
        
        <!-- Overrided services -->
        <service id="templating.cache_warmer.template_paths" class="%templating.cache_warmer.template_paths.class%" public="false">
            <argument type="service" id="templating.finder" />
            <argument type="service" id="sylius.theme.templating.file_locator.inner" /> <!-- using default templating locator, as TemplatePathsCacheWarmer accepts TemplateLocator class instances only -->
            <tag name="kernel.cache_warmer" priority="20" />
        </service>

        <service id="assets.path_package" class="%sylius.assets.path_package.class%" abstract="true">
            <argument /> <!-- base path -->
            <argument type="service" /> <!-- version strategy -->
            <argument type="service" id="sylius.theme.context" />
            <argument type="service" id="sylius.theme.asset.path_resolver" />
            <argument type="service" id="assets.context" />
        </service>

    </services>

</container>
