<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <mapped-superclass name="Sylius\Bundle\ThemeBundle\Model\ThemeAuthor" table="sylius_theme_author">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" nullable="true" />
        <field name="email" type="string" nullable="true" />
        <field name="homepage" type="string" nullable="true" />
        <field name="role" type="string" nullable="true" />
    </mapped-superclass>
</doctrine-mapping>
