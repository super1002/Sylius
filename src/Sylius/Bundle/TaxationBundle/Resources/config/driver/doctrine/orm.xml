<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius_taxation.model.category.class">Sylius\Bundle\TaxationBundle\Entity\DefaultTaxCategory</parameter>
        <parameter key="sylius_taxation.model.rate.class">Sylius\Bundle\TaxationBundle\Entity\DefaultTaxRate</parameter>

        <parameter key="sylius_taxation.repository.category.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>
        <parameter key="sylius_taxation.repository.rate.class">Sylius\Bundle\ResourceBundle\Doctrine\ORM\EntityRepository</parameter>

        <parameter key="sylius_taxation.form.type.category_choice.class">Sylius\Bundle\TaxationBundle\Form\Type\TaxCategoryEntityType</parameter>
    </parameters>

    <services>
        <service id="sylius_taxation.manager.category" alias="doctrine.orm.entity_manager" />
        <service id="sylius_taxation.repository.category" class="%sylius_taxation.repository.category.class%">
            <argument type="service" id="sylius_taxation.manager.category" />
            <argument type="service">
                <service
                    factory-service="sylius_taxation.manager.category"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata"
                    public="false"
                >
                    <argument>%sylius_taxation.model.category.class%</argument>
                </service>
            </argument>
        </service>

        <service id="sylius_taxation.manager.rate" alias="doctrine.orm.entity_manager" />
        <service id="sylius_taxation.repository.rate" class="%sylius_taxation.repository.rate.class%">
            <argument type="service" id="sylius_taxation.manager.rate" />
            <argument type="service">
                <service
                    factory-service="sylius_taxation.manager.rate"
                    factory-method="getClassMetadata"
                    class="Doctrine\ORM\Mapping\ClassMetadata"
                    public="false"
                >
                    <argument>%sylius_taxation.model.rate.class%</argument>
                </service>
            </argument>
        </service>

        <service id="sylius_taxation.form.type.category_choice" class="%sylius_taxation.form.type.category_choice.class%">
            <argument>%sylius_taxation.model.category.class%</argument>
            <tag name="form.type" alias="sylius_taxation_category_choice" />
        </service>
    </services>

</container>
