<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Sylius\Bundle\TaxationBundle\Model\TaxCategory">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">sylius_taxation.category.name.not_blank</option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">sylius_taxation.category.name.min_length</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">sylius_taxation.category.name.max_length</option>
            </constraint>
        </property>
    </class>

    <class name="Sylius\Bundle\TaxationBundle\Model\TaxRate">
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">sylius_taxation.rate.name.not_blank</option>
            </constraint>
            <constraint name="MinLength">
                <option name="limit">2</option>
                <option name="message">sylius_taxation.rate.name.min_length</option>
            </constraint>
            <constraint name="MaxLength">
                <option name="limit">255</option>
                <option name="message">sylius_taxation.rate.name.max_length</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
