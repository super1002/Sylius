{% macro list(rates) %}

{% if rates|length > 0 %}
<table class="table">
    <thead>
        <tr>
            <th>{{ sylius_resource_sort('id', '#id') }}</th>
            <th>{{ sylius_resource_sort('category') }}</th>
            <th>{{ sylius_resource_sort('name') }}</th>
            <th>{{ sylius_resource_sort('amount') }}</th>
            <th>{{ sylius_resource_sort('includedInPrice', 'included in price?') }}</th>
            <th>{{ sylius_resource_sort('calculator') }}</th>
            <th>{{ sylius_resource_sort('updatedAt', 'last updated') }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for rate in rates %}
        <tr>
            <td>{{ rate.id }}</td>
            <td>{{ rate.category }}</td>
            <td>{{ rate.name }}</td>
            <td>{{ rate.amount }}</td>
            <td>
                <span class="label label-{{ rate.includedInPrice ? 'success' : 'important'}}">
                    {{ rate.includedInPrice ? 'yes' : 'no'}}
                </span>
            </td>
            <td><span class="label label info">{{ rate.calculator }}</span></td>
            <td>{{ rate.updatedAt|date }}</td>
            <td>
                <div class="btn-group pull-right">
                    <a href="{{ path('sylius_taxation_rate_show', {'id': rate.id}) }}" class="btn">
                       <i class="icon-book"></i> details
                    </a>
                    <a href="{{ path('sylius_taxation_rate_update', {'id': rate.id}) }}" class="btn">
                       <i class="icon-pencil"></i> edit
                    </a>
                    <a href="{{ path('sylius_taxation_rate_delete', {'id': rate.id}) }}" class="btn btn-danger">
                        <i class="icon-trash"></i> delete
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="alert alert-info">
    <h4 class="alert-heading">Information</h4>
    You have no tax rates configured
</div>
{% endif %}

{% endmacro %}
