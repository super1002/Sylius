<h1>Tax rate details <small>{{ tax_rate.name }}</small></h1>
<hr>
<div class="well">
    <a href="{{ path('sylius_tax_rate_index') }}" class="btn btn-primary">
        <i class="icon-list-alt"></i> manage tax rates
    </a>
    <a href="{{ path('sylius_tax_rate_update', {'id': tax_rate.id}) }}" class="btn">
        <i class="icon-pencil"></i> edit
    </a>
    <form action="{{ path('sylius_tax_rate_delete', {'id': tax_rate.id}) }}" method="post" class="inline">
        <input type="hidden" name="_method" value="DELETE">
        <button class="btn btn-danger">
            <i class="icon-trash"></i>
        </button>
    </form>
</div>

<table class="table table-bordered table-consensed">
    <thead>
        <tr>
            <th>{{ 'sylius.tax_rate.category'|trans }}</th>
            <th>{{ 'sylius.tax_rate.name'|trans }}</th>
            <th>{{ 'sylius.tax_rate.amount'|trans }}</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ tax_rate.category }}</td>
            <td>{{ tax_rate.name }}</td>
            <td>{{ tax_rate.amountAsPercentage }}%</td>
        </tr>
    </tbody>
</table>
