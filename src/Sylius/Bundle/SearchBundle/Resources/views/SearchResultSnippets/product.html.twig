<div class="product-box">
    <a href="{{ path(result) }}"><h4>{{ result.name|truncate(18) }}</h4></a>
    <a href="{{ path(result) }}">
        <img class="img-rounded img-responsive"
             src="{{ result.image ? result.image.path|imagine_filter('sylius_medium') : 'http://placehold.it/262x255' }}"
             alt="{{ result.name }}"/>
        {% if result.variants|length == 1 and result.variants|length > 0 %}
            <span class="label label-primary">{{ sylius_calculate_price(result.variants.get(0))|sylius_price }}</span>
        {% else %}
            {% for variant in result.variants %}
                <span class="label label-primary">{{ sylius_calculate_price(variant)|sylius_price }}</span>
            {% endfor %}
        {% endif %}
        <button class="btn btn-success btn-xs pull-right"><i
                    class="icon-shopping-cart icon-white"></i> {{ 'sylius.ui.add_to_cart'|trans }}</button>
    </a>
</div>
