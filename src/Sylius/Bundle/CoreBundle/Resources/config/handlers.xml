<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sylius.handler.locale_change" class="Sylius\Bundle\CoreBundle\Handler\LocaleChangeHandler">
            <argument type="service" id="sylius.storage.locale" />
            <argument type="service" id="sylius.context.channel.composite" />
            <argument type="service" id="event_dispatcher" />
        </service>
    </services>

</container>