<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
                               http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sylius.event_subscriber.attribute.load_metadata.class">Sylius\Bundle\AttributeBundle\EventListener\LoadMetadataSubscriber</parameter>

        <parameter key="sylius.form.type.attribute_type_choice.class">Sylius\Bundle\AttributeBundle\Form\Type\AttributeTypeChoiceType</parameter>
        <parameter key="sylius.registry.attribute_type.class">Sylius\Component\Registry\ServiceRegistry</parameter>

        <parameter key="sylius.attribute.attribute_type.text.class">Sylius\Bundle\AttributeBundle\AttributeType\TextAttributeType</parameter>
        <parameter key="sylius.form.type.attribute_type.text.class">Sylius\Bundle\AttributeBundle\Form\Type\AttributeType\TextAttributeTypeType</parameter>

        <parameter key="sylius.attribute.attribute_type.checkbox.class">Sylius\Bundle\AttributeBundle\AttributeType\CheckboxAttributeType</parameter>
        <parameter key="sylius.form.type.attribute_type.checkbox.class">Sylius\Bundle\AttributeBundle\Form\Type\AttributeType\CheckboxAttributeTypeType</parameter>

        <parameter key="sylius.attribute.attribute_type.integer.class">Sylius\Bundle\AttributeBundle\AttributeType\IntegerAttributeType</parameter>
        <parameter key="sylius.form.type.attribute_type.integer.class">Sylius\Bundle\AttributeBundle\Form\Type\AttributeType\IntegerAttributeTypeType</parameter>

        <parameter key="sylius.attribute.attribute_type.datetime.class">Sylius\Bundle\AttributeBundle\AttributeType\DatetimeAttributeType</parameter>
        <parameter key="sylius.form.type.attribute_type.datetime.class">Sylius\Bundle\AttributeBundle\Form\Type\AttributeType\DatetimeAttributeTypeType</parameter>
    </parameters>

    <services>
        <service id="sylius.event_subscriber.attribute.load_metadata" class="%sylius.event_subscriber.attribute.load_metadata.class%">
            <tag name="doctrine.event_subscriber" />
            <argument>%sylius.attribute.subjects%</argument>
        </service>

        <service id="sylius.registry.attribute_type" class="%sylius.registry.attribute_type.class%">
            <argument>Sylius\Component\Attribute\AttributeType\AttributeTypeInterface</argument>
        </service>
        <service id="sylius.form.type.attribute_type_choice" class="%sylius.form.type.attribute_type_choice.class%">
            <argument>%sylius.attribute.attribute_types%</argument>
            <tag name="form.type" alias="sylius_attribute_type_choice" />
        </service>

        <service id="sylius.attribute.attribute_type.text" class="%sylius.attribute.attribute_type.text.class%">
            <tag name="sylius.attribute.attribute_type" attribute-type="text" label="Text" />
        </service>
        <service id="sylius.form.type.attribute_type.text" class="%sylius.form.type.attribute_type.text.class%">
            <tag name="form.type" alias="sylius_attribute_type_text" />
        </service>

        <service id="sylius.attribute.attribute_type.checkbox" class="%sylius.attribute.attribute_type.checkbox.class%">
            <tag name="sylius.attribute.attribute_type" attribute-type="checkbox" label="Checkbox" />
        </service>
        <service id="sylius.form.type.attribute_type.checkbox" class="%sylius.form.type.attribute_type.checkbox.class%">
            <tag name="form.type" alias="sylius_attribute_type_checkbox" />
        </service>

        <service id="sylius.attribute.attribute_type.integer" class="%sylius.attribute.attribute_type.integer.class%">
            <tag name="sylius.attribute.attribute_type" attribute-type="integer" label="Integer" />
        </service>
        <service id="sylius.form.type.attribute_type.integer" class="%sylius.form.type.attribute_type.integer.class%">
            <tag name="form.type" alias="sylius_attribute_type_integer" />
        </service>

        <service id="sylius.attribute.attribute_type.datetime" class="%sylius.attribute.attribute_type.datetime.class%">
            <tag name="sylius.attribute.attribute_type" attribute-type="datetime" label="Datetime" />
        </service>
        <service id="sylius.form.type.attribute_type.datetime" class="%sylius.form.type.attribute_type.datetime.class%">
            <tag name="form.type" alias="sylius_attribute_type_datetime" />
        </service>
    </services>

</container>
